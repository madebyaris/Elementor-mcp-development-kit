{
  "name": "wp-mcp-server-ayu",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "MCP server for AYU AI Elementor - WordPress automation via Cursor",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc --project tsconfig.json",
    "start:stdio": "node dist/server.js",
