    "check": "biome check . --write",
    "cleanup": "pnpm dlx del-cli node_modules dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.22.0",
    "dotenv": "^17.2.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "npm-check-updates": "catalog:",
    "tsx": "^4.16.2",
    "typescript": "catalog:"
  }
}

